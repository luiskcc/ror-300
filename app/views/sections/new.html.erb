<%= form_with(model: @section, local: true, class: "flex flex-col gap-2") do |f| %>
  <%= f.text_field :name, placeholder: "Name", class: "border border-gray-300 rounded-md p-2" %>
  <%= f.text_area :description, placeholder: "Description", class: "border border-gray-300 rounded-md p-2" %>
  <%= f.submit "Create Section", class: "bg-blue-500 text-white rounded-md p-2" %>
<% end %>