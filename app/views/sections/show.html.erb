<div class="container mx-auto px-4 py-8">
  <div class="bg-white rounded-xl shadow-lg p-8 mb-8">
    <h1 class="font-bold text-5xl mb-4 text-gray-900"><%= @section.name %></h1>
    <p class="text-gray-600 text-lg mb-6"><%= @section.description %></p>
    <%= link_to '← Back to Categories', root_path, class: "text-blue-600 hover:underline font-semibold" %>
  </div>

  <div class="mt-8">
    <h2 class="font-bold text-4xl mb-6 text-gray-800">Questions</h2>
    <div class="space-y-4">
      <% @section.questions.each_with_index do |question, index| %>
        <div class="bg-white rounded-xl shadow-md overflow-hidden">
          <details class="group">
            <summary class="flex items-center justify-between p-6 cursor-pointer list-none">
              <span class="font-semibold text-xl text-gray-900"><%= (index + 1) %>. <%= question.content %></span>
              <span class="text-blue-600 group-open:rotate-90 transition-transform duration-300">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </span>
            </summary>
            <div class="p-6 pt-0 text-gray-700">
              <p><%= question.answers.first.content %></p>
            </div>
          </details>
        </div>
      <% end %>
    </div>
  </div>
</div> 